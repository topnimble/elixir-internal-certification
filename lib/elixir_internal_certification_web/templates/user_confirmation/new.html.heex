<h1>Resend confirmation instructions</h1>

<.form let={f} for={:user} action={Routes.user_confirmation_path(@conn, :create)}>
  <div class="form-group">
    <%= label f, :email %>
    <%= email_input f, :email, required: true, class: "form-control", placeholder: "name@example.com" %>
  </div>

  <div class="mt-3">
    <%= submit "Resend confirmation instructions", class: "w-100 btn btn-lg btn-primary" %>
  </div>
</.form>

<p>
  <%= link "Register", to: Routes.user_registration_path(@conn, :new) %> |
  <%= link "Log in", to: Routes.user_session_path(@conn, :new) %>
</p>
